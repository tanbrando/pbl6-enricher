# ====================================
# LOG ENRICHMENT API - CONFIGURATION
# ====================================

# ===== Loki Configuration =====
LOKI_URL=http://localhost:3100
LOKI_TIMEOUT=10

# ===== Flask Configuration =====
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# ===== Logging Configuration =====
LOG_LEVEL=DEBUG
LOG_FORMAT=json
LOG_FILE=./logs/app.log

# ===== Cache Configuration =====
REDIS_ENABLED=False
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# ===== GeoIP Configuration =====
GEOIP_ENABLED=True
GEOIP_DB_PATH=./parsers/data/geoip/GeoLite2-City.mmdb

# ===== Threat Intelligence =====
THREAT_INTEL_ENABLED=False
ABUSEIPDB_API_KEY=your-abuseipdb-api-key
VIRUSTOTAL_API_KEY=your-virustotal-api-key

# ===== AI Provider Configuration =====
# Choose AI provider: "gemini" (FREE) or "azure"
AI_PROVIDER=gemini

# ===== Google Gemini Configuration (FREE TIER - RECOMMENDED) =====
# Get your free API key from: https://aistudio.google.com/apikey
GEMINI_ENABLED=True
GEMINI_API_KEY=your-gemini-api-key-here

# Free tier limits:
# - 15 requests per minute (RPM)
# - 1 million tokens per minute (TPM)
# - 1500 requests per day (RPD)

# ===== Azure OpenAI Configuration (PAID) =====
AZURE_OPENAI_ENABLED=False
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_DEPLOYMENT_NAME=gpt4-turbo

# ===== AI Settings (Common) =====
AI_TEMPERATURE=0.3
AI_MAX_TOKENS=2000
AI_TIMEOUT=60

# ===== Performance =====
MAX_WORKERS=4
REQUEST_TIMEOUT=30
